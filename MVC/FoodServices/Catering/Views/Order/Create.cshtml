@model Catering.Models.OrderModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Styles/create.css" rel="stylesheet" />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="col-md-9 formRegister" >
    <div class="row">
        <br/>
        <div align="center"><img src="~/Images/edit.png" class="img-responsive edit-icon" /></div>
        <div class="col-sm-12 title"><h2 align="center">Book our services</h2></div>
    </div>
    <hr />

    <div class="row row-item">
        <div class=" col-md-5 col-sm-6">
            <div class="row">
                <strong>Name</strong>
            </div>
            <div class="row">
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="col-md-5 col-md-offset-1 col-sm-6">
            <div class="row">
                <strong>Date &amp; Time</strong>
            </div>
            <div class="row">
                @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="row row-item">
        <div class="col-md-5 col-sm-6">
            <div class="row">
                <strong>Email</strong>
            </div>
            <div class="row">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="col-md-5 col-md-offset-1 col-sm-6">
            <div class="row">
                <strong>Mobile</strong>
            </div>
            <div class="row">
                @Html.EditorFor(m => m.Phonenumber, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                @Html.ValidationMessageFor(m => m.Phonenumber, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>
    <div class="row row-item">
        <div class="col-md-5">
            <input type="submit" value="Order" class="btn btn-danger btn-block" id="btnSubmit"  />
        </div>


    </div>


</div>

   
}






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
